{% assign se_stts = section.settings %}
{{ 'article.css' | asset_url | stylesheet_tag }}
<article>
  {% for block in section.blocks %}
    {% case block.type %}
      {% when 'author' %}
        <div class="flex items-center justify-center mb-5">
          <div class="max-w-7xl text-center">
            <small>{{ article.author }}</small>
          </div>
        </div>

      {% when 'date' %}
        <div class="flex items-center justify-center mb-5">
          <div class="max-w-7xl text-center">
            <small
              >Published -
              <time datetime="{{ article.published_at | date: '%Y-%m-%d' }}">
                {{- article.published_at | date: '%Y-%m-%d' -}}
              </time>
            </small>
          </div>
        </div>

      {% when 'title' %}
        <div class="flex items-center justify-center mb-5">
          <div class="max-w-7xl text-center">
            <h1 class="text-4xl md:text-6xl font-medium">{{ article.title }}</h1>
          </div>
        </div>

      {% when 'content' %}
        <div class="article-body md:px-20 px-5 py-5">
          {{ article.content }}
        </div>

      {% when 'image' %}
        <div class="image flex items-center justify-center mb-5 overflow-hidden">
          {% if article.image %}
            <img
              class="object-cover w-full object-center"
              src="{{ article.image | img_url: 'large' }}"
              alt="{{ article.image.alt }}"
            >
          {% else %}
            {% assign placeholder_image = 'lifestyle-1' %}
            {{ placeholder_image | placeholder_svg_tag: 'object-cover w-full object-center' }}
          {% endif %}
        </div>
    {% endcase %}
  {% endfor %}
</article>
{% style %}
    {% if se_stts.set_max_width and se_stts.article_max_width != blank %}
  .article.container {
    max-width: {{ se_stts.article_max_width }};
  }
    {% endif  %}
{% endstyle %}
{% schema %}
{
  "name": "Template Article",
  "class": "article container mx-auto py-20",
  "settings": [
    {
      "type": "checkbox",
      "id": "set_max_width",
      "label": "Set Article Max Width",
      "default": false
    },
    {
      "type": "text",
      "id": "article_max_width",
      "label": "Article Max Width"
    }
  ],
  "blocks": [
    {
      "type": "author",
      "name": "Author",
      "limit": 1
    },
    {
      "type": "title",
      "name": "Title",
      "limit": 1
    },
    {
      "type": "date",
      "name": "Published Date",
      "limit": 1
    },
    {
      "type": "content",
      "name": "Article Content",
      "limit": 1
    },
    {
      "type": "image",
      "name": "Featured Image",
      "limit": 1
    }
  ]
}
{% endschema %}

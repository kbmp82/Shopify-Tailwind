{% assign se_stts = section.settings %}
<div class="collection-list container mx-auto my-8">
  <div class="title text-center w-full text-gray-600 font-medium text-2xl">
    <h1>{{ se_stts.title }}</h1>
  </div>
  <div class="my-8 grid gap-7 mx-auto justify-center px-2 md:px-5 lg:px-0">
    {% for collection in collections %}
      {% if collection.all_products_count > 0 %}
        {% render 'collection_card', collection: collection %}
      {% endif %}

    {% else %}
      {% for item in (1..3) %}
        {% render 'collection_card_placeholder' %}
      {% endfor %}
    {% endfor %}
  </div>
</div>
{% style %}
  .collection-list img {
    height: 325px;
  }
  .collection-list .grid {
    grid-template-columns: repeat(auto-fill, minmax({{se_stts.max_width}}, 1fr));
  }
{% endstyle %}
{% schema %}
{
  "name": "Collection List",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "title",
      "default": "Collections"
    },
    {
      "type": "text",
      "id": "max_width",
      "label": "Card max width",
      "default": "300px"
    }
  ]
}
{% endschema %}
